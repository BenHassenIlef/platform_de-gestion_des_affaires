{% extends 'base.html.twig' %}
{% block title %}New Users{% endblock %}
{% block stylesheets %}
    <style>
        body {
            background: linear-gradient(120deg, #a8ff78 0%, #78ffd6 50%, #43e97b 100%, #38f9d7 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
            color: #222;
        }
        .admin-home-container {
            max-width: 1100px;
            margin: 60px auto 0 auto;
            padding: 48px 32px 48px 32px;
            background: #fff;
            border-radius: 32px;
            box-shadow: 0 8px 32px rgba(102,126,234,0.10), 0 1.5px 8px rgba(0,0,0,0.04);
            display: flex;
            flex-direction: column;
            align-items: center;
            overflow: hidden;
        }
        .admin-home-container h2 {
            text-align: center;
            margin-bottom: 32px;
            font-size: 2.2rem;
            font-weight: 800;
            color: #2d2d2d;
            letter-spacing: 0.5px;
        }
        .user-table {
            width: 100%;
            border-collapse: collapse;
            margin: 40px auto;
            box-shadow: 0 2px 12px rgba(102,126,234,0.08);
            border-radius: 12px;
            overflow: hidden;
            background: #f8f9ff;
        }
        .user-table th, .user-table td {
            border: 1px solid #eee;
            padding: 12px 16px;
            text-align: left;
        }
        .user-table th {
            background: linear-gradient(90deg, #e0eafc 0%, #cfdef3 100%);
            color: #333;
            font-weight: 700;
        }
        .user-table tr:nth-child(even) { background: #fafaff; }
        .user-table tr:hover { background: #e3eafe; transition: background 0.2s; }
        .back-link {
            display: inline-block;
            margin: 20px 0;
            padding: 10px 22px;
            background: linear-gradient(135deg,#667eea 0%,#764ba2 100%);
            color: white;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 600;
        }
        .back-link:hover { background: linear-gradient(135deg,#764ba2 0%,#667eea 100%); }
        .action-btn {
            display: inline-block;
            padding: 6px 18px;
            border-radius: 18px;
            font-size: 1rem;
            font-weight: 600;
            color: #222;
            text-decoration: none;
            margin: 0 4px;
            transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
            box-shadow: 0 1px 4px rgba(94,198,231,0.08);
            background: #b3e0ff; /* bleu pastel clair */
        }
        .action-btn:hover {
            background: #7ecbff; /* bleu pastel plus fonc√© au survol */
            color: #111;
        }
        /* Suppression des anciennes classes de couleur */
    </style>
{% endblock %}
{% block body %}
    {% include 'navbar.html.twig' %}
    <div class="admin-home-container" style="margin-top: 40px;">
        <h2>All Users</h2>
        <table class="user-table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in all_users %}
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles[0] }}</td>
                        <td>
                            <a href="{{ path('admin_edit_user', {'id': user.id}) }}" class="action-btn">‚úèÔ∏è Edit</a>
                            <a href="{{ path('admin_delete_user', {'id': user.id}) }}" class="action-btn" onclick="return confirm('Delete this user?');">üóëÔ∏è Delete</a>
                            {% if user.isNew %}
                                <a href="{{ path('admin_mark_user_not_new', {'id': user.id}) }}" class="action-btn">üëÅÔ∏è Mark as seen</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="3">No users found.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %} 