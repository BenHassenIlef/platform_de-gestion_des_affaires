{% extends 'base.html.twig' %}
{% block title %}Change Password{% endblock %}
{% block stylesheets %}
<style>
    body { 
        background: linear-gradient(135deg, #a8ff78 0%, #78ffd6 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
        color: #222;
    }
    .change-password-card {
        background: #fff;
        border-radius: 24px;
        box-shadow: 0 4px 32px rgba(0,0,0,0.10);
        padding: 48px 40px 32px 40px;
        max-width: 420px;
        width: 100%;
        margin: 60px auto 0 auto;
        border: none;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .change-title {
        color: #2d2d2d;
        font-size: 2.2rem;
        font-weight: 800;
        margin-bottom: 24px;
        text-align: center;
        letter-spacing: 1px;
    }
    .change-form label {
        color: #5ec6e7;
        font-weight: 700;
        margin-bottom: 8px;
        display: block;
        font-size: 1.08rem;
    }
    .change-form input[type="password"] {
        width: 100%;
        padding: 16px;
        border-radius: 18px;
        border: none;
        margin-bottom: 24px;
        font-size: 1.12rem;
        background: #e7f0fd;
        color: #222;
        box-shadow: 0 2px 8px rgba(102,126,234,0.07);
        transition: border 0.2s, box-shadow 0.2s;
    }
    .change-form input[type="password"]:focus {
        outline: none;
        border: 2px solid #5ec6e7;
        background: #fff;
        box-shadow: 0 0 0 2px #e0eafc;
    }
    .change-form button {
        background: linear-gradient(90deg, #5ec6e7 0%, #f7b42c 100%);
        color: #fff;
        border: none;
        padding: 10px 32px;
        border-radius: 22px;
        cursor: pointer;
        font-weight: 600;
        font-size: 1.08rem;
        transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
        box-shadow: 0 2px 8px rgba(94,198,231,0.10);
        margin-top: 10px;
        margin-bottom: 10px;
        white-space: nowrap;
        min-width: 110px;
        display: inline-block;
        text-align: center;
    }
    .change-form button:hover {
        background: linear-gradient(90deg, #f7b42c 0%, #5ec6e7 100%);
        color: #fff;
        transform: translateY(-2px) scale(1.04);
        box-shadow: 0 4px 16px rgba(94,198,231,0.16);
        outline: 2px solid #5ec6e7;
    }
    .alert {
        margin-bottom: 18px;
        padding: 12px 20px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1rem;
    }
    .alert-success { background: #e0ffe0; color: #00b400; border: 1px solid #b2ffb2; }
    .alert-error { background: #fff0e0; color: #d3a100; border: 1px solid #ffe066; }
</style>
{% endblock %}
{% block body %}
    {% include 'navbar.html.twig' %}
    <div class="change-password-card">
        <div class="change-title">Change Password</div>
        <form method="post" class="change-form" autocomplete="off">
            <label for="currentPassword">Current Password</label>
            <input type="password" id="currentPassword" name="currentPassword" required>
            <label for="newPassword">New Password</label>
            <input type="password" id="newPassword" name="newPassword" required>
            <label for="confirmPassword">Confirm New Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required>
            <div style="text-align:center;">
                <button type="submit">Update Password</button>
            </div>
        </form>
    </div>
{% endblock %} 