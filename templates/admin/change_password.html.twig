{% extends 'base.html.twig' %}
{% block title %}Change Password{% endblock %}
{% block stylesheets %}
    <style>
        body {
            background: linear-gradient(120deg, #a8ff78 0%, #78ffd6 50%, #43e97b 100%, #38f9d7 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
            color: #222;
        }
        .dashboard-container {
            max-width: 600px;
            margin: 48px auto 0 auto;
            padding: 48px 32px 48px 32px;
            background: #fff;
            border-radius: 40px;
            box-shadow: 0 8px 40px rgba(102,126,234,0.13), 0 1.5px 8px rgba(0,0,0,0.04);
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .dashboard-container h2 {
            text-align: center;
            margin-bottom: 36px;
            font-size: 2.4rem;
            font-weight: 900;
            background: linear-gradient(90deg, #5ec6e7 0%, #f7b42c 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        .change-password-form {
            width: 100%;
            max-width: 420px;
            margin: 0 auto;
            background: #f8faff;
            border-radius: 32px;
            box-shadow: 0 4px 32px rgba(102,126,234,0.10);
            padding: 40px 32px 32px 32px;
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }
        .change-password-form label {
            font-weight: 700;
            margin-bottom: 8px;
            color: #5ec6e7;
            font-size: 1.08rem;
        }
        .change-password-form input {
            width: 100%;
            padding: 16px;
            margin-bottom: 24px;
            border-radius: 18px;
            border: none;
            font-size: 1.12rem;
            background: #e7f0fd;
            color: #222;
            box-shadow: 0 2px 8px rgba(102,126,234,0.07);
            transition: border 0.2s, box-shadow 0.2s;
        }
        .change-password-form input:focus {
            outline: none;
            border: 2px solid #5ec6e7;
            background: #fff;
            box-shadow: 0 0 0 2px #e0eafc;
        }
        .pill-btn {
            margin-top: 18px;
            display: block;
            width: 100%;
            padding: 16px 0;
            border-radius: 30px;
            background: linear-gradient(90deg, #5ec6e7 0%, #f7b42c 100%);
            color: #fff;
            font-size: 1.18rem;
            font-weight: 700;
            border: none;
            outline: none;
            box-shadow: 0 2px 8px rgba(94,198,231,0.10);
            transition: background 0.2s, box-shadow 0.2s, transform 0.2s;
            letter-spacing: 0.5px;
        }
        .pill-btn:hover {
            background: linear-gradient(90deg, #f7b42c 0%, #5ec6e7 100%);
            transform: translateY(-2px) scale(1.04);
            box-shadow: 0 4px 16px rgba(94,198,231,0.16);
        }
    </style>
{% endblock %}
{% block body %}
    {% include 'navbar.html.twig' %}
    <div class="dashboard-container">
        <h2>Change Password</h2>
        <form method="post" class="change-password-form">
            <label for="current_password">Current Password</label>
            <input type="password" id="current_password" name="current_password" required />
            <label for="new_password">New Password</label>
            <input type="password" id="new_password" name="new_password" required />
            <label for="confirm_password">Confirm New Password</label>
            <input type="password" id="confirm_password" name="confirm_password" required />
            <button type="submit" class="pill-btn">Submit</button>
        </form>
    </div>
{% endblock %} 